                                    <ToolTip>
                                        <TextBlock
                                            Margin="2,0"
                                            Text="{Binding FieldCaption}" />
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                            </TextBlock>
                            <ContentPresenter
                                Grid.Column="1"
                                Content="{TemplateBinding Content}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger SourceName="PART_contentTxt" Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand" />
                        </Trigger>
                        <Trigger SourceName="brdItem" Property="IsMouseOver" Value="True">
