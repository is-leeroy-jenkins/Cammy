                        x:Name="brdItem"
                        Margin="1,4"
                        Padding="0,0,3,0"
                        Background="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type syncfusion:PivotGridControl}}, Path=GroupingBarItemBackground}"
                        BorderBrush="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type syncfusion:PivotGridControl}}, Path=GroupingBarItemBorderBrush}"
                        BorderThickness="{StaticResource FluentDark.BorderThickness1}">
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="*"
                                    MinWidth="10" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                x:Name="PART_contentTxt"
                                Grid.Column="0"
                                Margin="3,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type syncfusion:PivotGridControl}}, Path=GroupingBarItemForeground}"
                                Text="{Binding FieldCaption}"
