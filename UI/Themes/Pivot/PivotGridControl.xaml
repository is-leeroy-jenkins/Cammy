                            <Setter TargetName="brdItem" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type syncfusion:PivotGridControl}}, Path=GroupingButtonHoverBorderBrush}" />
