        <Setter Property="FontWeight" Value="{StaticResource FluentDark.FontWeightMedium}" />
        <Setter Property="FontFamily" Value="{StaticResource FluentDark.ThemeFontFamily}" />
        <Setter Property="IsTabStop" Value="False" />
