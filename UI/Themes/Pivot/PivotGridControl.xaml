                            <Setter TargetName="brdItem" Property="BorderBrush" Value="{StaticResource ControlBackground}" />
                            <Setter TargetName="PART_contentTxt" Property="Foreground" Value="{StaticResource DisabledForeground}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand" />
                        </Trigger>
