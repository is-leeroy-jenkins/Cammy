<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:sfskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <ResourceDictionary.MergedDictionaries>

        <ResourceDictionary Source="/Syncfusion.Themes.FluentDark.WPF;component/SfChart/SfChartCommon.xaml" />
        <sfskin:ResourceDictionaryProvider
            DictionaryName="Common"
            ThemeName="FluentDark" />
        <sfskin:ResourceDictionaryProvider
            DictionaryName="Brushes"
            ThemeName="FluentDark" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Grid line style  -->
    <Style
        x:Key="gridLineStyle"
        TargetType="Line">
        <Setter Property="Stroke" Value="{StaticResource BorderAlt}" />
        <Setter Property="StrokeThickness" Value="1" />
    </Style>

    <Style
        x:Key="SyncfusionChartAxisLineStyle"
        TargetType="Line">
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
    </Style>

    <Style
        x:Key="ticklineStyle"
        TargetType="Line">
        <Setter Property="Stroke" Value="{StaticResource Border}" />
    </Style>

    <ControlTemplate
        x:Key="RepeatButtonTemplate"
        TargetType="RepeatButton">
        <Grid
            x:Name="Root"
            Background="Transparent">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate
        x:Key="HorizontalThumbTemplate"
        TargetType="Thumb">
        <Grid
            x:Name="Root"
            Height="10"
            Background="Transparent">
            <Rectangle
                x:Name="Background"
                Height="3"
                Fill="{StaticResource ContentBackgroundAlt2}" />
        </Grid>
    </ControlTemplate>

    <Style
        x:Key="SyncfusionResizableScrollBarStyle"
        TargetType="local:ResizableScrollBar">
        <Setter Property="Background" Value="{StaticResource ContentBackgroundAlt2}" />
        <Setter Property="MinWidth" Value="17" />
        <Setter Property="MinHeight" Value="17" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ResizableScrollBar">
                    <Grid x:Name="Root">
                        <Grid.Resources>
                            <!--  Horizontal Inc/Dec Templates  -->
                            <ControlTemplate
                                x:Key="HorizontalIncrementTemplate"
                                TargetType="RepeatButton">
                                <Grid x:Name="Root">
                                    <Rectangle
                                        x:Name="Background"
                                        Fill="{StaticResource ContentBackgroundAlt2}"
                                        Opacity="0"
                                        RadiusX="8"
                                        RadiusY="8"
                                        StrokeThickness="1" />
                                    <Rectangle
                                        x:Name="Highlight"
                                        Margin="1"
                                        IsHitTestVisible="false"
                                        Opacity="0"
                                        RadiusX="8"
                                        RadiusY="8"
                                        Stroke="#FF686868"
                                        StrokeThickness="1" />
                                    <Path
                                        Width="4"
                                        Height="8"
                                        Data="F1 M 511.047,352.682L 511.047,342.252L 517.145,347.467L 511.047,352.682 Z "
                                        Fill="{StaticResource IconColor}"
                                        Stretch="Uniform" />
                                    <Rectangle
                                        x:Name="DisabledElement"
                                        Fill="{StaticResource ContentBackgroundAlt2}"
                                        Opacity="0"
                                        RadiusX="8"
                                        RadiusY="8" />
                                </Grid>
                            </ControlTemplate>
                            <ControlTemplate
                                x:Key="HorizontalDecrementTemplate"
                                TargetType="RepeatButton">
                                <Grid x:Name="Root">
                                    <Rectangle
                                        x:Name="Background"
                                        Fill="{StaticResource ContentBackgroundAlt2}"
                                        Opacity="0"
                                        RadiusX="8"
                                        RadiusY="8"
                                        StrokeThickness="1" />
                                    <Path
                                        Width="4"
                                        Height="8"
                                        Data="F1 M 110.692,342.252L 110.692,352.682L 104.594,347.467L 110.692,342.252 Z "
                                        Fill="{StaticResource IconColor}"
                                        Stretch="Uniform" />
                                    <Rectangle
                                        x:Name="DisabledElement"
                                        Fill="{StaticResource ContentBackgroundAlt2}"
                                        Opacity="0"
                                        RadiusX="8"
                                        RadiusY="9" />
                                </Grid>
                            </ControlTemplate>

                            <!--  Vertical Inc/Dec Templates  -->
                            <ControlTemplate
                                x:Key="VerticalIncrementTemplate"
                                TargetType="RepeatButton">
                                <Grid x:Name="Root">
                                    <Rectangle
                                        x:Name="Background"
                                        Fill="{StaticResource ContentBackgroundAlt2}"
                                        Opacity="0"
                                        RadiusX="8"
                                        RadiusY="8"
                                        StrokeThickness="1" />
                                    <Rectangle
                                        x:Name="Highlight"
                                        Margin="1"
                                        IsHitTestVisible="false"
                                        Opacity="0"
                                        RadiusX="8"
                                        RadiusY="8"
                                        Stroke="#FF6DBDD1"
                                        StrokeThickness="1" />
                                    <Path
                                        Width="8"
                                        Height="4"
                                        Data="F1 M 531.107,321.943L 541.537,321.943L 536.322,328.042L 531.107,321.943 Z "
                                        Fill="{StaticResource IconColor}"
                                        Stretch="Uniform" />
                                    <Rectangle
                                        x:Name="DisabledElement"
                                        Fill="{StaticResource ContentBackgroundAlt2}"
                                        Opacity="0"
                                        RadiusX="8"
                                        RadiusY="8" />
                                </Grid>
                            </ControlTemplate>
                            <ControlTemplate
                                x:Key="VerticalDecrementTemplate"
                                TargetType="RepeatButton">
                                <Grid x:Name="Root">
                                    <Rectangle
                                        x:Name="Background"
                                        Fill="{StaticResource ContentBackgroundAlt2}"
                                        Opacity="0"
                                        RadiusX="8"
                                        RadiusY="8"
                                        StrokeThickness="1" />
                                    <Rectangle
                                        x:Name="Highlight"
                                        Margin="1"
                                        IsHitTestVisible="false"
                                        Opacity="0"
                                        RadiusX="1"
                                        RadiusY="1"
                                        Stroke="{StaticResource ContentBackgroundAlt2}"
                                        StrokeThickness="1" />
                                    <Path
                                        Width="8"
                                        Height="4"
                                        Data="F1 M 541.537,173.589L 531.107,173.589L 536.322,167.49L 541.537,173.589 Z "
                                        Fill="{StaticResource IconColor}"
                                        Stretch="Uniform" />
                                    <Rectangle
                                        x:Name="DisabledElement"
                                        Fill="{StaticResource ContentBackgroundAlt2}"
                                        Opacity="0"
                                        RadiusX="8"
                                        RadiusY="8" />
                                </Grid>
                            </ControlTemplate>

                            <!--  Thumb Templates  -->
                            <ControlTemplate
                                x:Key="VerticalThumbTemplate"
                                TargetType="Thumb">
                                <Grid x:Name="ThumbVisual">
                                    <Rectangle
                                        x:Name="Background"
                                        Fill="{StaticResource BorderAlt}" />
                                    <ContentControl
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                        <Grid
                                            Width="12"
                                            Height="15">
                                            <Path
                                                Margin="0,0.795,0,0"
                                                Data="M0,9.5190001 L7.9320002,9.5190001 7.9320002,10.313 0,10.313 z M0,4.7600002 L7.9320002,4.7600002 7.9320002,5.5539999 0,5.5539999 z M0,0 L7.9320002,0 7.9320002,0.7940001 0,0.7940001 z"
                                                Fill="{StaticResource Border}"
                                                Stretch="Fill" />
                                            <Path
                                                Margin="0,0,0,0.794"
                                                Data="M0,9.5200004 L7.9320002,9.5200004 7.9320002,10.314 0,10.314 z M0,4.7610006 L7.9320002,4.7610006 7.9320002,5.5550005 0,5.5550005 z M0,0 L7.9320002,0 7.9320002,0.79500008 0,0.79500008 z"
                                                Fill="{StaticResource ContentBackgroundAlt2}"
                                                Stretch="Fill" />
                                        </Grid>
                                    </ContentControl>
                                </Grid>
                            </ControlTemplate>
                            <ControlTemplate
                                x:Key="HorizontalThumbTemplate"
                                TargetType="Thumb">
                                <Grid x:Name="ThumbVisual">
                                    <Rectangle
                                        x:Name="Background"
                                        Fill="{StaticResource BorderAlt}" />
                                    <ContentControl
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                        <Grid
                                            Width="15"
                                            Height="12">
                                            <Path
                                                Margin="0,0,0.795,0"
                                                Data="M9.5190001,0 L10.313,0 10.313,7.9320002 9.5190001,7.9320002 z M4.7600002,0 L5.5539999,0 5.5539999,7.9320002 4.7600002,7.9320002 z M0,0 L0.7940001,0 0.7940001,7.9320002 0,7.9320002 z"
                                                Fill="{StaticResource Border}"
                                                Stretch="Fill" />
                                            <Path
                                                Margin="0.794,0,0,0"
                                                Data="M9.5200005,0 L10.314,0 10.314,7.9320002 9.5200005,7.9320002 z M4.7610002,0 L5.5549998,0 5.5549998,7.9320002 4.7610002,7.9320002 z M0,0 L0.7940001,0 0.7940001,7.9320002 0,7.9320002 z"
                                                Fill="{StaticResource ContentBackgroundAlt2}"
                                                Stretch="Fill" />
                                        </Grid>
                                    </ContentControl>
                                </Grid>
                            </ControlTemplate>
                            <ControlTemplate
                                x:Key="HorizontalNearThumbTemplate"
                                TargetType="Thumb">
                                <Border
                                    Width="18"
                                    Margin="0,0,-1,0"
                                    Background="{StaticResource BorderAlt}"
                                    CornerRadius="8,0,0,8">
                                    <Grid Margin="4,0,0,0">
                                        <ContentControl>
                                            <Ellipse
                                                Width="9"
                                                Height="9"
                                                Fill="{StaticResource BorderAlt}" />
                                        </ContentControl>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                            <ControlTemplate
                                x:Key="HorizontalFarThumbTemplate"
                                TargetType="Thumb">
                                <Border
                                    Width="18"
                                    Margin="-1,0,0,0"
                                    Background="{StaticResource BorderAlt}"
                                    CornerRadius="0,8,8,0">
                                    <Grid Margin="0,0,3,0">
                                        <ContentControl>
                                            <Ellipse
                                                Width="9"
                                                Height="9"
                                                Fill="{StaticResource BorderAlt}" />
                                        </ContentControl>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                            <ControlTemplate
                                x:Key="VerticalNearThumbTemplate"
                                TargetType="Thumb">
                                <Border
                                    Height="18"
                                    Margin="0,-1,0,0"
                                    Background="#FF686868"
                                    CornerRadius="0,0,8,8">
                                    <Grid>
                                        <ContentControl>
                                            <Ellipse
                                                Width="9"
                                                Height="9"
                                                Fill="{StaticResource BorderAlt}" />
                                        </ContentControl>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                            <ControlTemplate
                                x:Key="VerticalFarThumbTemplate"
                                TargetType="Thumb">
                                <Border
                                    Height="18"
                                    Margin="0,0,0,-1"
                                    Background="#FF686868"
                                    CornerRadius="8,8,0,0">
                                    <Grid>
                                        <ContentControl>
                                            <Ellipse
                                                Width="9"
                                                Height="9"
                                                Fill="{StaticResource BorderAlt}" />
                                        </ContentControl>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Grid.Resources>

                        <!--  Horizontal Template  -->
                        <Grid
                            x:Name="HorizontalRoot"
                            Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Track Layer  -->
                            <Rectangle
                                Grid.ColumnSpan="7"
                                Fill="{StaticResource ContentBackgroundAlt2}"
                                RadiusX="8"
                                RadiusY="8"
                                Stroke="{StaticResource ContentBackgroundAlt2}"
                                StrokeThickness="1" />
                            <Rectangle
                                Grid.ColumnSpan="7"
                                Fill="{TemplateBinding Background}"
                                RadiusX="8"
                                RadiusY="8"
                                Stroke="{StaticResource ContentBackgroundAlt2}"
                                StrokeThickness="1" />
                            <Rectangle
                                Grid.ColumnSpan="7"
                                Fill="{StaticResource ContentBackgroundAlt2}"
                                RadiusX="8"
                                RadiusY="8"
                                StrokeThickness="1" />
                            <Rectangle
                                x:Name="ScrollRect"
                                Grid.ColumnSpan="7"
                                Margin="1"
                                RadiusX="8"
                                RadiusY="8"
                                Stroke="{StaticResource ContentBackgroundAlt2}" />

                            <!--  Repeat Buttons + Thumb  -->
                            <RepeatButton
                                x:Name="HorizontalSmallDecrease"
                                Grid.Column="0"
                                MinWidth="16"
                                Margin="1"
                                Interval="50"
                                IsTabStop="False"
                                Template="{StaticResource HorizontalDecrementTemplate}"
                                Visibility="{TemplateBinding Property=ScrollButtonVisibility}" />
                            <RepeatButton
                                x:Name="HorizontalLargeDecrease"
                                Grid.Column="1"
                                Width="0"
                                Interval="50"
                                IsTabStop="False"
                                Template="{StaticResource RepeatButtonTemplate}" />
                            <Thumb
                                x:Name="HorizontalThumbHand1"
                                Grid.Column="2"
                                MinWidth="10"
                                Background="{TemplateBinding Background}"
                                Cursor="ScrollWE"
                                Template="{StaticResource HorizontalNearThumbTemplate}" />
                            <Thumb
                                x:Name="HorizontalThumb"
                                Grid.Column="3"
                                Width="18"
                                MinWidth="0"
                                Background="{TemplateBinding Background}"
                                Cursor="Hand"
                                Template="{StaticResource HorizontalThumbTemplate}" />
                            <Thumb
                                x:Name="HorizontalThumbHand2"
                                Grid.Column="4"
                                MinWidth="10"
                                Background="{TemplateBinding Background}"
                                Cursor="ScrollWE"
                                Template="{StaticResource HorizontalFarThumbTemplate}" />
                            <RepeatButton
                                x:Name="HorizontalLargeIncrease"
                                Grid.Column="5"
                                Interval="50"
                                IsTabStop="False"
                                Template="{StaticResource RepeatButtonTemplate}" />
                            <RepeatButton
                                x:Name="HorizontalSmallIncrease"
                                Grid.Column="6"
                                MinWidth="16"
                                Margin="1"
                                Interval="50"
                                IsTabStop="False"
                                Template="{StaticResource HorizontalIncrementTemplate}"
                                Visibility="{TemplateBinding Property=ScrollButtonVisibility}" />
                        </Grid>

                        <!--  Vertical Template  -->
                        <Grid x:Name="VerticalRoot">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Track Layer  -->
                            <Rectangle
                                Grid.RowSpan="7"
                                Fill="{StaticResource ContentBackgroundAlt2}"
                                RadiusX="8"
                                RadiusY="8"
                                Stroke="{StaticResource ContentBackgroundAlt2}"
                                StrokeThickness="1" />
                            <Rectangle
                                Grid.RowSpan="7"
                                Fill="{StaticResource ContentBackgroundAlt2}"
                                RadiusX="8"
                                RadiusY="8"
                                StrokeThickness="1" />
                            <Rectangle
                                Grid.RowSpan="7"
                                Margin="1"
                                RadiusX="8"
                                RadiusY="8"
                                Stroke="#FFB7B7B7" />

                            <!--  Repeat Buttons + Thumb  -->
                            <RepeatButton
                                x:Name="VerticalSmallDecrease"
                                Grid.Row="6"
                                MinHeight="16"
                                Margin="1"
                                Interval="50"
                                IsTabStop="False"
                                RenderTransformOrigin="0.5,0.5"
                                Template="{StaticResource VerticalDecrementTemplate}"
                                Visibility="{TemplateBinding Property=ScrollButtonVisibility}">
                                <RepeatButton.RenderTransform>
                                    <RotateTransform Angle="180" />
                                </RepeatButton.RenderTransform>
                            </RepeatButton>
                            <RepeatButton
                                x:Name="VerticalLargeDecrease"
                                Grid.Row="5"
                                Height="0"
                                Interval="50"
                                IsTabStop="False"
                                Template="{StaticResource RepeatButtonTemplate}" />
                            <Thumb
                                x:Name="VerticalThumbHand1"
                                Grid.Row="4"
                                MinHeight="18"
                                Cursor="ScrollNS"
                                Template="{StaticResource VerticalNearThumbTemplate}" />
                            <Thumb
                                x:Name="VerticalThumb"
                                Grid.Row="3"
                                Height="18"
                                MinHeight="0"
                                Cursor="Hand"
                                Template="{StaticResource VerticalThumbTemplate}" />
                            <Thumb
                                x:Name="VerticalThumbHand2"
                                Grid.Row="2"
                                MinHeight="18"
                                Cursor="ScrollNS"
                                Template="{StaticResource VerticalFarThumbTemplate}" />
                            <RepeatButton
                                x:Name="VerticalLargeIncrease"
                                Grid.Row="1"
                                Interval="50"
                                IsTabStop="False"
                                Template="{StaticResource RepeatButtonTemplate}" />
                            <RepeatButton
                                x:Name="VerticalSmallIncrease"
                                Grid.Row="0"
                                MinHeight="16"
                                Margin="1"
                                Interval="50"
                                IsTabStop="False"
                                RenderTransformOrigin="0.5,0.5"
                                Template="{StaticResource VerticalIncrementTemplate}"
                                Visibility="{TemplateBinding Property=ScrollButtonVisibility}">
                                <RepeatButton.RenderTransform>
                                    <RotateTransform Angle="180" />
                                </RepeatButton.RenderTransform>
                            </RepeatButton>
                        </Grid>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" />
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="Root"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.5"
                                            Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="SyncfusionSfChartResizableBarStyle"
        TargetType="local:SfChartResizableBar">
        <Setter Property="Background" Value="{StaticResource ContentBackgroundAlt2}" />
        <Setter Property="MinWidth" Value="3" />
        <Setter Property="MinHeight" Value="3" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SfChartResizableBar">
                    <Grid x:Name="Root">
                        <Grid.Resources>

                            <!--  Thumb Templates  -->
                            <ControlTemplate
                                x:Key="VerticalThumbTemplate"
                                TargetType="Thumb">
                                <Grid
                                    x:Name="Root"
                                    Width="10"
                                    Background="Transparent">
                                    <Rectangle
                                        x:Name="Background"
                                        Width="3"
                                        Fill="{StaticResource ContentBackgroundAlt2}" />
                                </Grid>
                            </ControlTemplate>

                            <ControlTemplate
                                x:Key="HorizontalPositionThumbTemplate"
                                TargetType="Thumb">
                                <Grid
                                    x:Name="Root"
                                    Width="35">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Path
                                        Grid.Row="0"
                                        Width="31"
                                        Height="31"
                                        Margin="0,0,0,-2"
                                        Data="M23.5,12.5 C23.5,18.5751 18.5751,23.5 12.5,23.5 C6.42487,23.5 1.5,18.5751 1.5,12.5 C1.5,6.42487 6.42487,1.5 12.5,1.5 C18.5751,1.5 23.5,6.42487 23.5,12.5 z"
                                        Fill="{StaticResource BorderAlt}"
                                        Stretch="Uniform"
                                        Stroke="{StaticResource BorderAlt}"
                                        StrokeThickness="3" />
                                    <Path
                                        Grid.Row="1"
                                        Width="10.437"
                                        Height="6.714"
                                        Data="M299.906,317.548 L314.401,340.841 L329.346,316.701 C329.346,316.701 316.448,324.029 299.906,317.548 z"
                                        Fill="{StaticResource BorderAlt}"
                                        Stretch="Fill"
                                        StrokeThickness="6"
                                        UseLayoutRounding="False" />
                                    <Grid.RenderTransform>
                                        <RotateTransform Angle="180" />
                                    </Grid.RenderTransform>
                                </Grid>
                            </ControlTemplate>

                            <ControlTemplate
                                x:Key="VerticalPositionThumbTemplate"
                                TargetType="Thumb">
                                <Grid
                                    x:Name="Root"
                                    Width="62">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Path
                                        Grid.Row="0"
                                        Data="M23.5,12.5 C23.5,18.5751 18.5751,23.5 12.5,23.5 C6.42487,23.5 1.5,18.5751 1.5,12.5 C1.5,6.42487 6.42487,1.5 12.5,1.5 C18.5751,1.5 23.5,6.42487 23.5,12.5 z"
                                        Fill="{StaticResource BorderAlt}"
                                        Stretch="Uniform"
                                        Stroke="{StaticResource BorderAlt}"
                                        StrokeThickness="3" />
                                    <Path
                                        Grid.Row="1"
                                        Width="10.437"
                                        Height="6.714"
                                        Margin="0,-28,0,0"
                                        Data="M299.906,317.548 L314.401,340.841 L329.346,316.701 C329.346,316.701 316.448,324.029 299.906,317.548 z"
                                        Fill="{StaticResource BorderAlt}"
                                        Stretch="Fill"
                                        StrokeThickness="6"
                                        UseLayoutRounding="False" />
                                    <Grid.RenderTransform>
                                        <RotateTransform Angle="270" />
                                    </Grid.RenderTransform>
                                </Grid>
                            </ControlTemplate>

                        </Grid.Resources>

                        <!--  Horizontal Template  -->
                        <Grid
                            x:Name="HorizontalRoot"
                            Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Track Layer  -->
                            <Line
                                Grid.ColumnSpan="7"
                                Height="5" />
                            <!--  Repeat Buttons + Thumb  -->
                            <RepeatButton
                                x:Name="HorizontalSmallDecrease"
                                Grid.Column="0"
                                MinWidth="16"
                                Margin="1"
                                Interval="50"
                                IsTabStop="False"
                                Visibility="{TemplateBinding ScrollButtonVisibility}" />
                            <RepeatButton
                                x:Name="HorizontalLargeDecrease"
                                Grid.Column="1"
                                Width="0"
                                Interval="50"
                                IsTabStop="False"
                                Template="{StaticResource RepeatButtonTemplate}" />
                            <Canvas
                                Grid.Column="2"
                                Canvas.ZIndex="1">
                                <ContentControl
                                    x:Name="HorizontalNearHandContent"
                                    Visibility="Collapsed">
                                    <ContentPresenter />
                                </ContentControl>
                                <Thumb
                                    x:Name="HorizontalThumbHand1"
                                    MinWidth="10"
                                    Background="{TemplateBinding Background}"
                                    Opacity="0"
                                    RenderTransformOrigin="0.5,0.5"
                                    Template="{StaticResource HorizontalPositionThumbTemplate}">
                                    <Thumb.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="18" Y="47" />
                                        </TransformGroup>
                                    </Thumb.RenderTransform>
                                </Thumb>
                            </Canvas>
                            <Thumb
                                x:Name="HorizontalThumb"
                                Grid.Column="3"
                                Width="18"
                                MinWidth="0"
                                Background="{TemplateBinding Background}"
                                RenderTransformOrigin="0.5,0.5"
                                Template="{StaticResource HorizontalThumbTemplate}">
                                <Thumb.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform />
                                        <ScaleTransform />
                                    </TransformGroup>
                                </Thumb.RenderTransform>
                            </Thumb>
                            <Canvas
                                Grid.Column="4"
                                Canvas.ZIndex="1">
                                <ContentControl
                                    x:Name="HorizontalFarHandContent"
                                    Visibility="Collapsed">
                                    <ContentPresenter />
                                </ContentControl>
                                <Thumb
                                    x:Name="HorizontalThumbHand2"
                                    MinWidth="10"
                                    Background="{TemplateBinding Background}"
                                    Opacity="0"
                                    RenderTransformOrigin="0.5,0.5"
                                    Template="{StaticResource HorizontalPositionThumbTemplate}">
                                    <Thumb.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="17" Y="47" />
                                        </TransformGroup>
                                    </Thumb.RenderTransform>
